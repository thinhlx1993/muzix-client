# Muzix IoT Speaker - Runtime Environment Configuration
# Copy this file to .env and modify the intervals as needed

# Server Configuration
MUZIX_SERVER_URL=https://music.scamera.ai
DEVICE_NAME=Muzix Public Speaker
CONFIG_FILE=ubuntu_speaker_config.json
PLATFORM=ubuntu
USERNAME=
PASSWORD=

# Audio Configuration
ALSA_PCM_CARD=0
ALSA_PCM_DEVICE=0
SDL_AUDIODRIVER=alsa
SDL_VIDEODRIVER=dummy
PYGAME_HIDE_SUPPORT_PROMPT=1

# Sync and Monitoring Intervals (in seconds)
# Position sync to backend during playback
SYNC_POSITION_INTERVAL=2

# Status monitoring (fetching playback status from backend)
STATUS_MONITORING_INTERVAL=5

# Schedule monitoring (checking for schedule changes)
SCHEDULE_MONITORING_INTERVAL=30

# Device heartbeat (maintaining online status)
HEARTBEAT_INTERVAL=30

# API Configuration
# Timeout for backend API calls (in seconds)
API_TIMEOUT=30

# Logging Configuration
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log format (Python logging format string)
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Log file path (relative to container /app directory)
LOG_FILE=/app/logs/muzix_speaker.log

# Whether to log to console (true/false)
LOG_TO_CONSOLE=true

# Whether to log to file (true/false)
LOG_TO_FILE=false

# Maximum log file size in MB (for rotating file handler)
LOG_MAX_SIZE=10

# Number of backup log files to keep
LOG_BACKUP_COUNT=3

# Python Configuration
PYTHONUNBUFFERED=1 
